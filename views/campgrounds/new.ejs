    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form method="post" action="/campgrounds">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title">
                </div>
        
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image">
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id= "price" name="campground[price]" aria-label="price-label" aria-describedby="basic-addon1">
                  </div>
                

                <div class="mb-3">
                    <label class="form-label" for="description">Description Url</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"></textarea>
                </div>
                <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>

                </div>    
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
        </div>